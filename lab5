lst = [1, 2, 3, 4, 5]
reversed_lst = lst[::-1]
print("Обратный порядок:", reversed_lst)

def list_sort(lst):
    return sorted(lst, key=abs, reverse=True)

# Пример использования
nums = [-10, 2, -30, 4, 5]
sorted_nums = list_sort(nums)
print("Сортировка по убыванию по абсолютному значению:", sorted_nums)

def change(lst):
    lst[0], lst[-1] = lst[-1], lst[0]

# Пример использования
my_list = [1, 2, 3, 4]
change(my_list)
print("После смены первого и последнего элемента:", my_list)
